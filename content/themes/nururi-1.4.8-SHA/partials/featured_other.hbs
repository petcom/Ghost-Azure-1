<div class="section-featured {{#if feature_image}}is-featured-image{{else}}no-featured-image {{#is "page"}}wrap{{/is}}{{/if}}">
	{{#if feature_image}}
	<div class="featured-image" style="background-image: url({{feature_image}})"></div>
	{{/if}}
	<div class="featured-wrap flex">
		<article class="featured-content">
			{{#is "page"}}
			<h2><a href="{{url}}">{{title}}{{#is "page"}}<span class="featured-dot"></span>{{/is}}</a></h2>
			{{else}}
			{{#is "post"}}
			<div class="tags-wrap">
				{{#if featured}}
				<span class="featured-label global-tag">{{>icons/blog/star}} <span>{{t "Featured"}}</span></span>
				{{/if}}
				{{#if tags}}
				{{#foreach tags separator=""}}
				<a class="post-tag global-tag" href="{{url}}">{{name}}</a>
				{{/foreach}}
				{{/if}}
			</div>
			
			{{/is}}
			<h1 class="white">{{title}}</h1>
			
			{{/is}}
			{{^is "post"}}
			<div class="item-meta white">
				
				<div> <h3> {{excerpt}}</h3> </div>
            {{#is "post"}}
				<span>{{t "by"}}</span>
				{{#has author="count:2"}}
				{{authors separator=" <span>&</span> "}}
				{{else}}
				{{authors}}
				{{/has}}
				<time datetime="{{date format="YYYY-MM-DD"}}">{{date published_at timeago="true"}}</time>
				{{#is "post"}}
				<span class="reading-time">{{>icons/blog/stopwatch}} {{reading_time minute=(t "1 min read") minutes=(t "% min read")}}</span>
            {{/is}}
					{{/is}}
				</div>
				{{/is}}
			</article>
		</div>
	</div>